<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
</head>
<body>
<script>
	var txt = "자바스크립트를 이용한 문자열 처리 함수";
	
	// 글자 수 구하기
	document.write('글자 수 -> ', txt.length); // length에 소괄호 안 씀
	// indexOf(), lastIndexOf :  문자가 없으면 -1
	document.write('<br/>indexOf -> ', txt.indexOf('트'));
	// search : 문자가 없으면 -1
	document.write('<br/>search -> ', txt.search('트'));
	// 문자열 일부 구하기
	// slice(index, index), substring(index, index), substr(index, count)
	document.write('<br/>slice -> ', txt.slice(3, 6));
	document.write('<br/>substring -> ', txt.substring(3, 6));
	document.write('<br/>substr -> ', txt.substr(2, 3)); //2부터 3개
</script>
</body>
</html>